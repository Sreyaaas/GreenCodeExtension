{
  "name": "green-code",
  "displayName": "Green Code",
  "version": "1.0.0",
  "description": "A VS Code extension to analyze and optimize Python code for environmental sustainability",
  "publisher": "your-publisher-name",
  "main": "./out/extension.js",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other",
    "Linters"
  ],
  "activationEvents": [
    "onCommand:green-code.analyzeCurrentFile",
    "onCommand:green-code.analyzeWorkspace",
    "onCommand:green-code.configureApiKey"
  ],
  "contributes": {
    "commands": [
      {
        "command": "green-code.analyzeCurrentFile",
        "title": "Green Code: Analyze Current File"
      },
      {
        "command": "green-code.analyzeWorkspace",
        "title": "Green Code: Analyze All Python Files in Workspace"
      },
      {
        "command": "green-code.configureApiKey",
        "title": "Green Code: Configure Groq API Key"
      }
    ],
    "configuration": {
      "title": "Green Code",
      "properties": {
        "greenCode.apiKey": {
          "type": "string",
          "default": "",
          "description": "Groq API key for sustainability analysis"
        },
        "greenCode.autoAnalyzeOnSave": {
          "type": "boolean",
          "default": false,
          "description": "Automatically analyze Python files when saving"
        }
      }
    },
    "menus": {
      "editor/context": [
        {
          "when": "resourceLangId == python",
          "command": "green-code.analyzeCurrentFile",
          "group": "greenCode"
        }
      ],
      "explorer/context": [
        {
          "when": "resourceLangId == python",
          "command": "green-code.analyzeCurrentFile",
          "group": "greenCode"
        }
      ]
    },
    "keybindings": [
      {
        "command": "green-code.analyzeCurrentFile",
        "key": "ctrl+alt+g",
        "mac": "cmd+alt+g",
        "when": "editorLangId == python"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky install"
  },
  "keywords": [
    "sustainability",
    "python",
    "code-quality",
    "green-computing"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^16.11.7",
    "@types/vscode": "^1.98.0",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "eslint": "^8.9.0",
    "husky": "^8.0.0",
    "typescript": "^4.9.5",
    "vscode-test": "^1.6.1"
  }
}
